# Browser branding
ac_add_options --with-ccache=sccache
ac_add_options --without-wasm-sandboxed-libraries

ac_add_options --with-app-basename="Creative Fox"
ac_add_options --with-app-name=${binName}
export MOZ_USER_DIR="Creative Fox"
export MOZ_APP_VENDOR="Creative Fox"
export MOZ_APP_BASENAME=CreativeFox
export MOZ_APP_PROFILE=${binName}
export MOZ_APP_DISPLAYNAME="Creative Fox"
export MOZ_MACBUNDLE_ID=com.creativecoders.creative-fox
export MOZ_DISTRIBUTION_ID=com.creativecoders.creative-fox
export MOZ_MACBUNDLE_NAME="Creative Fox.app"

# Misc
export MOZ_INCLUDE_SOURCE_INFO=1
export MOZ_REQUIRE_SIGNING=
export MOZ_SOURCE_REPO=https://github.com/pulse-browser/browser
export MOZ_SOURCE_CHANGESET=${changeset}
